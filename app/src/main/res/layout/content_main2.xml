<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="kr.co.aperturedev.petcommunity.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/dogMatching"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="goMatching"
                        android:text="애견커플매칭"
                        android:textStyle="bold"
                        android:textColor="#0000FF"/>

                    <Button
                        android:id="@+id/dogDiary"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="goDiary"
                        android:text="애견일기"
                        android:textColor="#000000"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/recommend"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:onClick="goRecommend"
                        android:text="추천"
                        android:textColor="#0000FF"
                        android:textStyle="bold" />

                </LinearLayout>

            </HorizontalScrollView>

            <ViewFlipper
                android:id="@+id/bannerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/banner1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="banner1Click"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/banner1" />
                <ImageButton
                    android:id="@+id/banner2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="banner2Click"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/banner2" />
                <ImageButton
                    android:id="@+id/banner3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:onClick="banner3Click"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/banner3" />

            </ViewFlipper>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mainNumber"
                    android:layout_width="20dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/mainTitle"
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/mainAuthor"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>
