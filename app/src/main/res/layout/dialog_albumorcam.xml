<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_margin="22dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/albumorpic_title"
            android:text="@string/select_album_or_camera"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="17sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/albumorpic_underline"
            android:background="@color/colorPrimary"
            android:layout_below="@id/albumorpic_title"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/albumorpic_selectbox"
            android:layout_below="@id/albumorpic_underline"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/albumorpic_selectbox_albumicon"
                    android:scaleType="centerInside"
                    android:background="#ffffff"
                    android:src="@drawable/ic_folder"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/albumorpic_selectbox_albumtext"
                    android:layout_marginTop="10dp"
                    android:text="앨범에서 선택"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/albumorpic_selectbox_picicon"
                    android:scaleType="centerInside"
                    android:background="#ffffff"
                    android:src="@drawable/ic_camera"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/albumorpic_selectbox_pictext"
                    android:layout_marginTop="10dp"
                    android:text="지금 촬영"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/albumorpic_underline2"
            android:background="@color/colorPrimary"
            android:layout_below="@id/albumorpic_selectbox"
            android:layout_marginTop="31dp"
            android:layout_marginBottom="11dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/albumorpic_cancel"
            android:layout_below="@id/albumorpic_underline2"
            android:layout_alignParentRight="true"
            android:background="#ffffff"
            android:textColor="@color/colorPrimary"
            android:text="@string/default_close"/>

    </RelativeLayout>
</FrameLayout>